<Window x:Class="ict40120RecruitmentSystemAssessment.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ict40120RecruitmentSystemAssessment"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!--grid definition-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="16" />
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="4*" />
            <!--<ColumnDefinition Width="4*" />-->
            <ColumnDefinition Width="16" />


        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="16" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="16" />
        </Grid.RowDefinitions>

        <!--buttons-->
        <Button x:Name="AddContractorButton" Content="Add Contractor" Margin="8,8,110,8" Grid.Column="1" Grid.Row="1" Click="AddContractorButton_Click"/>
        <Button x:Name="RemoveContractorButton" Content="Remove Contractor" Margin="130,8,8,8" Grid.Column="1" Grid.Row="1" Click="RemoveContractorButton_Click"/>

        <Button x:Name="AvailableJobsButton" Content="Add Job" Margin="8" Grid.Column="3" Grid.Row="1"/>
        <Button x:Name="AssignedJobsButton" Content="Complete Job" Margin="8" Grid.Column="4" Grid.Row="1"/>
        <Button x:Name="test" Content="test" Margin="8" Grid.Column="2" Grid.Row="2" Click="test_Click"/>

        <!--lists-->
        <ListBox x:Name="ContractorsList" Grid.Row="3" Grid.Column="1" Grid.RowSpan="3" Margin="4,8,4,8"/>
        <ListBox x:Name="JobsList" Grid.Row="3" Grid.Column="3" Grid.RowSpan="3" Margin="4,8,4,8"/>
        <ListBox x:Name="JobsInProgressList" Grid.Row="3" Grid.Column="4" Grid.RowSpan="3" Margin="4,8,4,8"/>
        <!--<ListBox x:Name="JobsDoneList" Grid.Row="2" Grid.Column="5" Grid.RowSpan="4" Margin="3,8,3,8"/>-->

        <!--textboxes-->
        <TextBox x:Name="idText" HorizontalAlignment="Left" Margin="14,80,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Background="#FFCC6C6C" Grid.ColumnSpan="2" Grid.RowSpan="2"/>
        <TextBox x:Name="firstNameText" Grid.Column="1" HorizontalAlignment="Left" Margin="0,23,0,0" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Background="#FFCC6C6C"/>
        <TextBox x:Name="LastNameText" Grid.Column="1" HorizontalAlignment="Left" Margin="0,46,0,0" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Background="#FFCC6C6C"/>
        <TextBox x:Name="WageText" HorizontalAlignment="Left" Margin="14,69,0,0" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Background="#FFCC6C6C" Grid.ColumnSpan="2" Grid.RowSpan="2"/>
    </Grid>
</Window>
